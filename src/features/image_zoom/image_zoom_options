import { isWikiPage } from "../../core/pageType";
import { registerFeature } from "../../core/options/options_registry";

registerFeature({
  name: "Image Zoom",
  id: "imageZoom",
  description:
    "Enable image zooming (with your mousewheel). For a thumbnail, a zoomable image pops up.  Other images are zoomable in place.",
  category: "Global",
  creators: [{ name: "Ian Beacall", wikitreeid: "Beacall-6" }],
  contributors: [],
  defaultValue: false,
  pages: [isWikiPage],
});
